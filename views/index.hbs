<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<div class="container">
    <div class="container">
        <h1><i>Machine Index</i></h1>
        <p><a class="btn btn-success btn-lg w3-round" href="index/new">Add new Machine!</a>
        </p>
    </div>
    <style>
        .tile {
            margin: 20px;
            position: relative;
            left: 100px;
            background-color: white;
        }
    </style>
    {{#each mcs}}
    <div class="tile col-md-3 col-sm-6 w3-card">
        <div class="thumbnail">
            <div class="caption">
                <h3><span class="w3-tag w3-yellow">{{this.model}}</span></h3>
                <p><b>Serial Number : </b>{{this.sno}}</p>
                <p><b>Year : </b>{{this.year}}</p>
                <p><b>Catagory : </b>{{this.catagory}}</p>
                <br>
                <a href="/machine/{{this._id}}" class="btn btn-primary w3-round">More...</a>
                <p></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>